{
  "$schema": "https://opencode.ai/config.json",

  "mcp": {
    // Configuration for macOS (Darwin)
    "chroma": {
      "type": "local",
      "command": ["docker", "run", "--rm", "-i", "ghcr.io/chroma-core/chroma-mcp:latest", "chroma-mcp", "--client-type", "http", "--host", "host.docker.internal", "--port", "8000", "--ssl", "false"],
      "enabled": true
    }
    // Alternative configuration for Linux:
