{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_speed": 3
  },
  "provider": {
    "local-llama.cpp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Local Llama.cpp",
      "options": {
        "baseURL": "http://192.168.1.51:11434/v1"
      },
      "models": {
        "gpt-oss-20b-Q8_XL": {
          "name": "GPT-OSS 20B Q8_XL",
          "options": {
            "limit": {
              "context": 45384
            }
          }
        },
        "qwen3-30b-a3b-instruct-2507-Q4_K_XL": {
          "name": "Qwen3 30B A3B Instruct 2507 Q4_K_XL",
          "options": {
            "limit": {
              "context": 45384
            }
          }
        },
        "qwen3-coder-UD_Q4_K_XL": {
          "name": "Qwen3 Coder UD Q4_K_XL",
          "options": {
            "limit": {
              "context": 36384
            }
          }
        }
      }
    }
  },
  "mcp": {
    "chroma": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "ghcr.io/chroma-core/chroma-mcp:latest",
        "chroma-mcp",
        "--client-type",
        "http",
        "--host",
        "host.docker.internal",
        "--port",
        "8420",
        "--ssl",
        "false"
      ],
      "enabled": false
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server:latest"
      ],
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  },
  "permission": {
    "bash": {
      "rm -rf *": "deny",
      "rm -rf /": "deny",
      "git push --force": "ask",
      "git push -f": "ask",
      "npm publish": "ask",
      "docker system prune -a": "ask"
    },
    "doom_loop": "ask",
    "external_directory": "ask"
  }
}
