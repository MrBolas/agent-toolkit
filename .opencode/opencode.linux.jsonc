{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
      "llama.cpp": {
        "npm": "@ai-sdk/openai-compatible",
        "models": {
          "qwen3-coder-UD_Q4_K_XL": {
            "id": "qwen3-coder-UD_Q4_K_XL",
            "name": "qwen3-coder Q4",
            "cost": {
              "input": 0.000,
              "output": 0.000
            },
            "limit": {
              "context": 40000,
              "output": 0
            }
          }
        },
        "options": {
          "baseURL": "http://192.168.1.51:11434/v1"
        }
      }
    },
  "mcp": {
    "chroma": {
      "type": "local",
      "command": ["docker", "run", "--network", "host", "--rm", "-i", "ghcr.io/chroma-core/chroma-mcp:latest", "chroma-mcp", "--client-type", "http", "--host", "localhost", "--port", "8420", "--ssl", "false"],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server:latest"
      ],
      "enabled": false
    },
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse",
      ],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  }
}
